@{
    ViewData["Title"] = "Menu Permission List";
}

@Html.AntiForgeryToken()

<div class="container-fluid px-2">

    <div class="d-flex justify-content-between align-items-center mb-2">
        <h5 class="mb-0"><i class="bi bi-shield-lock-fill me-1 text-primary"></i> Permission List</h5>

        <div class="d-flex align-items-center gap-2">
            <button type="button"
                    class="btn btn-outline-success btn-sm"
                    id="excelDownload"
                    data-grid="menuPermissionGrid"
                    data-file="MenuPermissions"
                    title="Excel Download">
                <i class="bi bi-file-earmark-excel me-1"></i>
                Excel
            </button>

            <button type="button"  class="btn btn-sm btn-primary" onclick="openAddMenuPermissionModal()">
                Add Permission
            </button>
        </div>
    </div>

    <div class="card">
        <div class="card-body p-1">
            <table id="menuPermissionGrid"></table>
            <div id="menuPermissionPager"></div>
        </div>
    </div>

</div>

@await Html.PartialAsync("_PermissionModal", new LMS.Models.MenuPermission())

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="@Url.Content("~/js/menuPermissionList.min.js")" asp-append-version="true"></script>

}
