@{
    ViewData["Title"] = "Menu List";
}

@Html.AntiForgeryToken()

<div class="container-fluid px-2">

    <div class="d-flex justify-content-between align-items-center mb-2">
        <h5 class="mb-0"><i class="bi bi-list-ul me-1 text-primary"></i> Menu List</h5>

        <div class="d-flex align-items-center gap-2">
            <button type="button"
                    class="btn btn-outline-success btn-sm"
                    id="excelDownload"
                    data-grid="menuGrid"
                    data-file="MenuMaster"
                    title="Excel Download">
                <i class="bi bi-file-earmark-excel me-1"></i>
                Excel
            </button>

            <button class="btn btn-sm btn-primary" onclick="openAddMenuModal()">
                Add Menu
            </button>
        </div>
    </div>

    <div class="card">
        <div class="card-body p-1">
            <table id="menuGrid"></table>
            <div id="menuPager"></div>
        </div>
    </div>

</div>

@await Html.PartialAsync("_MenuModal", new LMS.Models.MenuMaster())

@section Scripts {
    <script src="@Url.Content("~/js/menuList.min.js")" asp-append-version="true"></script>

}
