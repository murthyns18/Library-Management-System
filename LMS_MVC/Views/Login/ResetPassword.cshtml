@model ResetPasswordViewModel

<div class="container">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-4">

            <div class="card shadow-sm">
                <div class="card-body">

                    <h5 class="text-center mb-4">Reset Password</h5>

                    <form asp-action="ResetPassword" method="post" , new { autocomplete="off" }>

                        <input type="hidden" asp-for="Email" />
                        <input type="hidden" asp-for="Token" />

                        <div class="mb-3">
                            <label class="form-label">
                                New Password <span class="text-danger">*</span>
                            </label>
                            <input type="password" sp-for="NewPassword" class="form-control" />
                            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger small" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                Confirm Password <span class="text-danger">*</span>
                            </label>
                            <input type="password" asp-for="ConfirmPassword" class="form-control" />
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger small" })
                        </div>

                        <button type="submit" class="btn btn-primary w-100">
                            Reset Password
                        </button>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>
